<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.piveguyz.empickbackend.mailTemplate.query.mapper.InterviewMapper">
    <resultMap id="MailTemplateResultMap" type="com.piveguyz.empickbackend.mailTemplate.query.dto.MailTemplateQueryDTO">
        <id column="id" property="id"/>
        <result column="title" property="title"/>
        <result column="content" property="content"/>
    </resultMap>

    <select id="findAll" resultMap="MailTemplateResultMap">
        SELECT
            id,
            title,
            content
        FROM mail_template;
    </select>

    <select id="findByTitle" resultMap="MailTemplateResultMap">
        SELECT
            id,
            title,
            content
        FROM mail_template
        WHERE title LIKE CONCAT('%', #{title}, '%');
    </select>

</mapper>