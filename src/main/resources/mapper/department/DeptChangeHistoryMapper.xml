<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.piveguyz.empickbackend.department.query.mapper.DeptChangeHistoryMapper">

    <!-- 특정 사원의 부서 이동 기록 조회 -->
    <select id="selectDeptChangeHistoriesByMemberId" parameterType="int"
            resultType="com.piveguyz.empickbackend.department.query.dto.DeptChangeHistoryQueryDTO">
        SELECT id
             , member_id
             , dept_name
             , position_name
             , job_name
             , rank_name
             , work_start_at
             , work_end_at
        FROM dept_change_history
        WHERE member_id = #{memberId}
        ORDER BY work_start_at DESC
    </select>

</mapper>
